@page
@model UserViewRazorPages.Pages.PreRegisterModel
@{
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">Login</h1>
            <form method="post" class="my-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Do you have user code?</label>
                    <input asp-for="Code" class="form-control" required="true" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group text-danger">
                    @ViewData["notification"]
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Update Account</button>
                </div>
            </form>
            <div class="text-center">
                <p>-----Or-----</p>
            </div>
            <div class="text-center">
                <p>Create your own family<a asp-page="/Bodt/CreateNewFamily">here</a></p>
            </div>
        </div>
    </div>
</div>