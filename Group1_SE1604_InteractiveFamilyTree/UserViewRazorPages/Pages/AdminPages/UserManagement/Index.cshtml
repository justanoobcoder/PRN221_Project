@page
@model UserViewRazorPages.Pages.AdminPages.UserManagement.IndexModel
@{
    ViewData["Title"] = "Edit Family Details";
    Layout = "_AdminLayout";
}
<h1>User Management</h1>
<form method="post">
<select name='family' id="familySelect">
    @foreach (var family in Model.Families)
    {
        <option value="@family.FamilyId">@family.Name</option>
    }
        <input type ="submit" value="Get family members" class="btn btn-family-members"/>
</select>
</form>
<style>
    .btn {
        display: inline-block;
        padding: 0.5em 1em;
        border: none;
        background-color: #007bff;
        color: #fff;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        font-size: 14px;
    }
</style>    
<a>User Count: @Model.User.Count</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Img)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.User) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
                <td class="col-sm-10">
                    @if (item.Gender == true)
                    {
                        <a>Male</a>
                    }
                    else
                    {
                        <a>Female</a>
                    }

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
             <td>
                    <img src="/@item.Img" alt="User Image" style="width:100px; height:125px">
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@item.UserId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
