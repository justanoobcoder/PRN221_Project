@page
@model UserViewRazorPages.Pages.Hiepth.Events.ListAllModel
@{
    ViewData["Title"] = "List All Events";
    Layout = "_UserLayout";
}

    <a asp-page="MyEvents" class="btn btn-primary">
        My Events
        @if (Model.UnseenEventCount != 0)
        {
            <span class="badge badge-light">@Model.UnseenEventCount</span>
        }
    </a>

<h1>All events</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Creator</th>
            <th scope="col">Information</th>
            <th scope="col">Location</th>
            <th scope="col">Start Date</th>
            <th scope="col">End Date</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Events)
        {
            <tr>
                <td>@item.EventId</td>
                <td>@item.EventName</td>
                <td>@item.Creator.Name</td>
                <td>@item.Information</td>
                <td>@item.Location</td>
                <td>@item.StartDate</td>
                <td>@item.EndDate</td>
                <td>@item.Status</td>
            </tr>
        }
    </tbody>
</table>