@page
@model UserViewRazorPages.Pages.Hiepth.Events.AddMemberModel
@{
    ViewData["Title"] = "Add Member To Event";
    Layout = "_UserLayout";
}

<h1>Event</h1>
<div>
<dl class="row">
    <dt class="col-sm-2">
        Event Name:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Event.EventName)
    </dd>
    <dt class="col-sm-2">
        Information:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Event.Information)
    </dd>
    <dt class="col-sm-2">
        Location:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Event.Location)
    </dd>
    <dt class="col-sm-2">
        Creator:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Event.Creator.Name)
    </dd>
    <dt class="col-sm-2">
        Start Date:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Event.StartDate)
    </dd>
    <dt class="col-sm-2">
        End Date:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Event.EndDate)
    </dd>
    <dt class="col-sm-2">
        Status:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Event.Status)
    </dd>
</dl>
    @if (Model.AddedUsers.Count > 0)
    {
        <h3>Members</h3>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Phone Number</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var (index, item) in Model.AddedUsers.Select((item, i) => (i, item)))
                {
                    <tr>
                        <td>@item.UserId</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        @if (@item.Gender == true)
                        {
                            <td>Male</td>
                        }
                        else
                        {
                            <td>Female</td>
                        }
                        <td>@item.PhoneNumber</td>
                        <td>
                            @if (item.UserId != Model.LoginUserId)
                            {
                                <form method="post" asp-page-handler="DeleteMember">
                                    <input type="hidden" name="eventId" value="@Model.Event.EventId" />
                                    <input type="hidden" name="index" value="@index" />
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <form method="post">
            <input type="hidden" name="eventId" value="@Model.Event.EventId" />
            <button class="btn btn-primary">Add Members</button>
        </form>
    }
</div>
<hr/>
@if (Model.Users.Count > 0)
{
    <div>
        <h3>Member list</h3>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Phone Number</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Users)
                {
                    <tr>
                        <td>@item.UserId</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        @if (@item.Gender == true)
                        {
                            <td>Male</td>
                        }
                        else
                        {
                            <td>Female</td>
                        }
                        <td>@item.PhoneNumber</td>
                        <td>
                            <form method="post" asp-page-handler="AddMember">
                                <input type="hidden" name="eventId" value="@Model.Event.EventId" />
                                <input type="hidden" name="userId" value="@item.UserId" />
                                <button class="btn btn-primary">Add</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}