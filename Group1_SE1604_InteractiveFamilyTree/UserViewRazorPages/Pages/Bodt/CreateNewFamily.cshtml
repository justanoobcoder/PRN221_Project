@page
@model UserViewRazorPages.Pages.Bodt.CreateNewFamilyModel

<h4>Create new Family</h4>
<hr />
<div class="container">
    <div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Family.Name" class="control-label">Family Name</label>
                    <input asp-for="Family.Name" class="form-control" required />
                <span asp-validation-for="Family.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Family.Address" class="control-label">Family address</label>
                    <input asp-for="Family.Address" class="form-control" required />
                <span asp-validation-for="Family.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Family.Information" class="control-label">Family information</label>
                    <input asp-for="Family.Information" class="form-control" required />
                <span asp-validation-for="Family.Information" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
