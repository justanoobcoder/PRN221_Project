@page
@model UserViewRazorPages.Pages.Bodt.FamilyPages.EditFamilyProfileModel
@{
    ViewData["Title"] = "Edit Family Details";
    Layout = "_UserLayout";
}
<h4>Edit Family Profile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Family.FamilyId" />
            <div class="form-group">
                <label asp-for="Family.Name" class="control-label"></label>
                <input asp-for="Family.Name" class="form-control" />
                <span asp-validation-for="Family.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Family.Address" class="control-label"></label>
                <input asp-for="Family.Address" class="form-control" />
                <span asp-validation-for="Family.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Family.Information" class="control-label"></label>
                <input asp-for="Family.Information" class="form-control" />
                <span asp-validation-for="Family.Information" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Bodt/FamilyPages/FamilyDetails">Go back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
